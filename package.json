{
  "private": true,
  "name": "mern-workflow",
  "version": "0.1.14-alpha",
  "description": "",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack --config webpack.client.js && cross-env NODE_ENV=development nodemon ./src/server/index.jsx --watch ./src/server/ --exec babel-node -e 'js jsx'",
    "build": "npm run clean:build && npm run eslint && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack.client.js",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack.server.js",
    "serve": "NODE_ENV=production node ./build/server.bundle.js",
    "clean": "npm run clean:build && npm run clean:node_modules",
    "clean:build": "rimraf build/*",
    "clean:node_modules": "rimraf node_modules",
    "eslint": "npm run eslint:client && npm run eslint:server",
    "eslint:client": "eslint --color src/application/**/**",
    "eslint:server": "eslint --color src/server/**/**",
    "deploy": "git push heroku master"
  },
  "author": "Eddy Wilson <eddyw.dev@outlook.com> (https://github.com/eddyw)",
  "license": "MIT",
  "engines": {
    "node": "7.4.0",
    "npm": "4.1.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-3",
      "react"
    ],
    "plugins": [
      ["transform-runtime"],
      ["transform-class-properties", { "spec": true }],
      ["transform-es2015-classes"]
    ],
    "env": {
      "production": {
        "plugins": [
          ["transform-react-constant-elements"]
        ]
      }
    }
  },
  "dependencies": {
    "axios": "0.15.3",
    "babel-polyfill": "6.20.0",
    "body-parser": "1.15.2",
    "colors": "1.1.2",
    "compression": "1.6.2",
    "cookie-parser": "1.4.3",
    "cross-env": "3.1.4",
    "dotenv": "2.0.0",
    "errorhandler": "1.5.0",
    "express": "4.14.0",
    "express-react-views": "0.10.2",
    "express-session": "1.14.2",
    "express-validator": "3.1.2",
    "extract-text-webpack-plugin": "1.0.1",
    "immutable": "3.8.1",
    "mongoose": "4.7.6",
    "morgan": "1.7.0",
    "react": "15.4.1",
    "react-dom": "15.4.1",
    "react-helmet": "3.2.3",
    "react-redux": "5.0.1",
    "react-router": "3.0.0",
    "react-router-redux": "4.0.7",
    "redux": "3.6.0",
    "redux-promise": "0.5.3",
    "rimraf": "2.5.4",
    "sanitize.css": "4.1.0",
    "webpack": "1.14.0",
    "webpack-dev-middleware": "1.9.0",
    "webpack-externals-plugin": "1.0.0",
    "webpack-hot-middleware": "2.15.0"
  },
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-core": "6.21.0",
    "babel-eslint": "7.1.1",
    "babel-loader": "6.2.10",
    "babel-plugin-react-transform": "2.0.2",
    "babel-plugin-transform-class-properties": "6.19.0",
    "babel-plugin-transform-es2015-classes": "6.18.0",
    "babel-plugin-transform-react-constant-elements": "6.9.1",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-3": "6.17.0",
    "css-loader": "0.26.1",
    "eslint": "3.12.2",
    "eslint-config-airbnb": "13.0.0",
    "eslint-plugin-babel": "4.0.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.8.0",
    "file-loader": "0.9.0",
    "json-loader": "0.5.4",
    "less": "2.7.2",
    "less-loader": "2.2.3",
    "node-sass": "4.1.1",
    "nodemon": "1.11.0",
    "raw-loader": "0.5.1",
    "react-hot-loader": "3.0.0-beta.6",
    "sass-loader": "4.1.1",
    "style-loader": "0.13.1"
  }
}
